{
  "name": "jafs.github.io",
  "version": "1.0.0",
  "scripts": {
    "build": "node scripts/build.js",
    "build:css": "tailwindcss -i ./css/style.css -o ./css/dist.css --minify",
    "watch:css": "tailwindcss -i ./css/style.css -o ./css/dist.css --watch",
    "sitemap": "node scripts/generate-sitemap.js",
    "update:seo": "node scripts/update-seo.js",
    "build:all": "npm run build:css && npm run build && npm run sitemap",
    "start": "npx http-server -p 8080"
  },
  "dependencies": {
    "gray-matter": "4.0.3",
    "marked": "5.1.1"
  },
  "devDependencies": {
    "@tailwindcss/typography": "0.5.19",
    "tailwindcss": "3.4.18"
  }
}
